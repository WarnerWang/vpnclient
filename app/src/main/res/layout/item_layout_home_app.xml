<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin_width"
        android:layout_marginBottom="@dimen/padding"
        android:gravity="center_vertical"
        android:background="@drawable/background_corner">
        
        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="@dimen/app_icon_width"
            android:layout_height="@dimen/app_icon_width"
            android:layout_marginVertical="@dimen/padding"
            android:layout_marginStart="@dimen/padding"
            android:src="@mipmap/ic_app_icon"/>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="@dimen/padding"
            android:textSize="16sp"
            android:layout_weight="1"
            android:text="应用名称"/>

        <com.hxjg.vpn.widge.WJTextView
            android:id="@+id/accelerate_btn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="加速"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_marginRight="@dimen/padding"
            app:wj_solid_color="@color/btn_color"
            app:wj_corner_radius="15dp"/>
    </LinearLayout>

</LinearLayout>