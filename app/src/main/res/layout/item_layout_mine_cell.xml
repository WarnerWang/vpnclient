<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginHorizontal="@dimen/margin_width"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/cell_icon"
        android:layout_width="@dimen/cell_icon_width"
        android:layout_height="@dimen/cell_icon_width"
        android:layout_marginVertical="@dimen/padding"
        android:src="@drawable/ic_app_google"/>

    <TextView
        android:id="@+id/cell_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="@dimen/padding"
        android:textSize="16sp"
        android:layout_weight="1"
        android:text="用户协议"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/cell_row"/>

</LinearLayout>